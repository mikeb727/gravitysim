<!-- use SI units here unless otherwise specified! -->
<!-- for keycodes see https://www.glfw.org/docs/3.3/group__keys.html -->
<gravitysim>
    <visualization>
        <frameRate value="60" />
        <dimensions width="1024" height="768" />
    </visualization>
    <environment>
        <frameRate value="500" />
        <!-- convert visualization intrinsic scale to SI -->
        <unitsPerMeter value="4" />
        <paused type="bool" value="false" />
        <!-- boundary dimensions in vis units -->
        <boundary path="assets/cube.obj" />
        <gravity x="0" y="-9.8" z="0" />
        <wind x="0" y="0" z="0" />
        <airDensity value="0.005" />
    </environment>
    <controls>
        <disableUserInput type="bool" value="true" />
        <fullscreenMode type="bool" value="true" />
        <radius min="0.2" max="0.5" increment="1e-2" default="0.3" />
        <velocityPitch min="-1.571" max="1.571" increment="1e-1" default="0" />
        <velocityYaw min="-0.1" max="3.15" increment="1e-1" default="0" />
        <velocityMag min="0" max="100" increment="1e-1" default="0" />
        <velocityAngular min="-100" max="100" increment="0.5" default="0" />
        <angularAxis x="1" y="0" z="0" />
        <kickPitch min="-1.571" max="1.571" increment="1e-1" default="0" />
        <kickYaw min="-0.1" max="3.15" increment="1e-1" default="0" />
        <kickMag min="0" max="20" increment="1e-1" default="0" />
    </controls>
    <tuning>
        <objSpringCoeff value="1e4" />
        <objSpringDamping value="1e1" />
        <objFrictionCoeff value="2.5e-2" />
    </tuning>
    <input>
        <forward type="int" value="87" />
        <backward type="int" value="88" />
        <right type="int" value="67" />
        <left type="int" value="90" />
        <down type="int" value="69" />
        <up type="int" value="81" />
        <zoomIn type="int" value="65" />
        <zoomOut type="int" value="68" />
        <sizeTool type="int" value="49" />
        <speedTool type="int" value="50" />
        <spinTool type="int" value="51" />
        <pushTool type="int" value="52" />
        <toolReset type="int" value="48" />
        <clearEnv type="int" value="75" />
        <pause type="int" value="32" />
    </input>
</gravitysim>
